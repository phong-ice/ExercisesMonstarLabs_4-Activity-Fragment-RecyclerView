<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".fragment.Onboarding1">

    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/lato_regular"
        android:text="@string/Skip"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="240dp"
        android:scaleType="fitXY"
        android:src="@mipmap/tracciato_865"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@mipmap/gruppo_di_maschere_41"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_skip" />

    <TextView
        android:id="@+id/tv_large_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/raleway_black"
        android:text="Start to invest \nfor your future!"
        android:textColor="#3e3e3e"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_big" />

    <TextView
        android:id="@+id/tv_small_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lato_light"
        android:text="Ex totam praesentium incidunt aut."
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_large_title" />

    <ImageView
        android:id="@+id/del_1"
        android:layout_width="40dp"
        android:layout_height="8dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="58dp"
        android:src="@drawable/brg_radius_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_small_title" />

    <ImageView
        android:id="@+id/del_2"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="58dp"
        android:src="@drawable/circle_nothing"
        app:layout_constraintLeft_toRightOf="@id/del_1"
        app:layout_constraintTop_toBottomOf="@id/tv_small_title" />

    <ImageView
        android:id="@+id/del_3"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="58dp"
        android:src="@drawable/circle_nothing"
        app:layout_constraintLeft_toRightOf="@id/del_2"
        app:layout_constraintTop_toBottomOf="@id/tv_small_title" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="100dp"
        android:layout_height="44dp"
        android:text="Next"
        android:background="@drawable/brg_gradient_1"
        app:layout_constraintTop_toBottomOf="@id/tv_small_title"
        app:backgroundTint="@null"
        android:layout_marginTop="37dp"
        android:layout_marginRight="51dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/btn_next" />
</androidx.constraintlayout.widget.ConstraintLayout>