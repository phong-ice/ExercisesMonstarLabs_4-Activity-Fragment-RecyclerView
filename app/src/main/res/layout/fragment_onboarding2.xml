<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.Onboarding2">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:background="@null"
        android:src="@mipmap/icons_8_expand_arrow"
        android:tint="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/lato_regular"
        android:text="@string/Skip"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_large_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/raleway_black"
        android:text="Follow our tips\nto achieve success!"
        android:textColor="#3e3e3e"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back" />

    <TextView
        android:id="@+id/tv_small_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lato_light"
        android:text="Ex totam praesentium incidunt aut."
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_large_title" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/componente_4_1"
        app:layout_constraintBottom_toBottomOf="@id/img_big"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_big"
        app:layout_constraintVertical_bias="0.22" />

    <ImageView
        android:id="@+id/img_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:src="@mipmap/gruppo_di_maschere_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_small_title" />

    <ImageView
        android:id="@+id/del_1"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/circle_nothing"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_big" />

    <ImageView
        android:id="@+id/del_2"
        android:layout_width="40dp"
        android:layout_height="8dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/brg_radius_1"
        app:layout_constraintLeft_toRightOf="@id/del_1"
        app:layout_constraintTop_toBottomOf="@id/img_big" />

    <ImageView
        android:id="@+id/del_3"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/circle_nothing"
        app:layout_constraintLeft_toRightOf="@id/del_2"
        app:layout_constraintTop_toBottomOf="@id/img_big" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="100dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="51dp"
        android:background="@drawable/brg_gradient_1"
        android:backgroundTint="@null"
        android:text="NEXT"
        app:backgroundTint="@null"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_big" />

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/btn_next" />

</androidx.constraintlayout.widget.ConstraintLayout>